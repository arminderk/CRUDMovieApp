<div class="form-group">
  <label><%= t.label(:name, "Name") %></label>
  <%= t.text_field(:name, :class => "form-control", :placeholder => "Name") %>
</div>
<div class="form-group">
  <label><%= t.label(:rated) %></label><br>
  <%= t.select(:rated, [['G'], ['PG'], ['PG-13'], ['R']], {:prompt => "-- Select Rated --", :class => "form-control"}) %>
</div>
<div class="form-group">
  <label><%= t.label(:genre, "Genre") %></label>
  <%= t.text_field(:genre, :class => "form-control", :placeholder => "Genre") %>
</div>
<div class="form-group">
  <label><%= t.label(:year) %></label><br>
  <%= t.select(:year, (1970..2017), {:prompt => "-- Select Year --", :class => "form-control"}) %>
</div>
<div class="form-group">
  <label><%= t.label(:director, "Director") %></label>
  <%= t.text_field(:director, :class => "form-control", :placeholder => "Director") %>
</div>
<div class="form-group">
  <label><%= t.label(:description) %></label>
  <%= t.text_area(:description, :class => "form-control", :placeholder => "Description", :size => '30x10') %>
</div>
