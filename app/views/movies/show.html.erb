<% @page_title = "Show" %>
<% @page_header = "Show Movie" %>

<table class="table table-bordered table-responsive">
    <tr>
      <th>Name</th>
      <td><%= @movie.name %></td>
    </tr>
    <tr>
      <th>Rated</th>
      <td><%= @movie.rated %></td>
    </tr>
    <tr>
      <th>Genre</th>
      <td><%= @movie.genre %></td>
    </tr>
    <tr>
      <th>Year</th>
      <td><%= @movie.year %></td>
    </tr>
    <tr>
      <th>Director</th>
      <td><%= @movie.director %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @movie.description %></td>
    </tr>
    <tr>
      <th>Number of Theatres Movie is Playing In </th>
      <td><%= @movie.theatres.size %> </td>
    </tr>
    <tr>
      <th>Created At</th>
      <td><%= @movie.created_at %></td>
    </tr>
    <tr>
      <th>Updated At</th>
      <td><%= @movie.updated_at %></td>
    </tr>
    
</table><br>

<div class="page-header">
  <h3>All Comments</h3>
</div>

<% @comments.each do |comment| %>
  <h4>Title: <%= comment.title %></h4>
  <p>By: <%= comment.name %></p>
  <p>Comment: <%= comment.comment %></p>
<% end %>

<br><br>

<div class="page-header">
  <h4>Add Comment</h4>
</div>

<%= form_for @comment, :url => {controller: 'comments', action: 'create'} do |t| %>
  <div class="form-group">
    <%= t.label(:title) %>
    <%= t.text_field(:title, :class => 'form-control', :placeholder => 'Title') %>
  </div>
  <div class="form-group">
    <%= t.label(:name) %>
    <%= t.text_field(:name, :class => 'form-control', :placeholder => 'Name') %>
  </div>
  <div class="form-group">
    <%= t.label(:comment) %>
    <%= t.text_area(:comment, :class => 'form-control', :size => '20x5', :placeholder => 'Comment') %>
  </div>
  <%= t.hidden_field(:movie_id, :value => @movie.id) %>
  <%= t.submit('Add Comment', :class => 'btn btn-success') %>
<% end %><br>

<%= link_to("Back to Index", {:action => 'index'}, :class => 'back-index') %>

<br><br>
