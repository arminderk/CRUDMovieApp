<% @page_title = "Index" %>
<% @page_header = "Movies" %>

<br>

<!------------ Start Movie Index ------------>
<table class="table table-bordered table-responsive">
  <thead>
    <tr class="bg-primary">
      <th>#</th>
      <th>Name</th>
      <th>Rated</th>
      <th>Theaters</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each_with_index  do |movie, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= movie.name %></td>
      <td><%= movie.rated %></td>
      <td><%= movie.theatres.size %></td>
      <td class="actions">
        <%= link_to("Show", movie_path(id: movie.id), :class => 'action show') %>
        <%= link_to("Edit", edit_movie_path(id: movie.id), :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => movie.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table><br>

<%= link_to("Add New Movie", new_movie_path, :class => 'btn btn-success') %>