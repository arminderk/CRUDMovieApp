<% @page_title = "New" %>
<% @page_header = "Create Movie" %>
      
<%= form_for(:movie, :url => ({:action => 'create'})) do |t| %>

  <div class="form-group">
    <label>Name</label>
    <%= t.text_field(:name, :class => "form-control", :placeholder => "Name") %>
  </div>
  <div class="form-group">
    <label>Rated</label>
    <%= t.text_field(:rated, :class => "form-control", :placeholder => "Rated") %>
  </div>

  <%= t.submit("Submit Movie", :class => 'btn btn-success') %><br><br>

  <%= link_to("Back to Index", {:action => 'index'}, :class => 'back-index') %>


<% end %>
